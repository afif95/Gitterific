# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page#
GET     /                           controllers.HomeController.index

GET     /index                           controllers.ApiController.index1

GET 	/owner/:key						controllers.ApiController.getOwner(key: String)
GET 	/rep/:key						controllers.ApiController.getOwnerRepos(key: String)


GET 	/repository/:key/:repo				controllers.ApiController.getRepository(key: String, repo: String)



GET 	/home						controllers.ApiController.showRepos(request: Request)
+nocsrf
POST 	/home						controllers.ApiController.fetchRepos(request: Request)

GET    /explore                     controllers.HomeController.explore
GET    /tutorial                    controllers.HomeController.tutorial
GET    /time                    	controllers.HomeController.time


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
