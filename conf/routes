# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page#
GET     /                          				controllers.ApiController.index(request: Request)

GET 	/owner/:key								controllers.ApiController.getOwner(key: String)

GET 	/rep/:key								controllers.ApiController.getOwnerRepos(key: String)

GET 	/topics/:key							controllers.ApiController.getReposByTopic(key: String)

GET 	/repository/:key/:repo				    controllers.ApiController.getRepositoryIssues(key: String, repo: String)
GET 	/rep/:key/:repo			                controllers.ApiController.getRepository(key: String, repo: String)

GET 	/issues/:reponame/:owner/:issueurl		controllers.ApiController.getIssues(reponame: String, owner: String)

GET 	/home									controllers.ApiController.showRepos(request: Request)
+nocsrf
POST 	/home									controllers.ApiController.fetchRepos(request: Request)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
